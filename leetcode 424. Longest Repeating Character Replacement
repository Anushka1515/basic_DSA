class Solution {
public:
    int characterReplacement(string s, int k) {
        int start = 0;
        int end = 0;
        int ans = 0;
        int maxfreq = 0;
        unordered_map<char,int> hash;
        while(end<s.size()){
            hash[s[end]]++;
            maxfreq = max(maxfreq,hash[s[end]]);
            if((end - start + 1)-maxfreq <= k){
                ans = max(ans,end-start+1);
            }
            else{
                hash[s[start]]--;
                if(hash[s[start]]==0){
                    hash.erase(s[start]);
                }
                start++;
            }
            end++;
            cout<<s[start]<<" "<<s[end]<<" "<<ans<<endl;
        }
        return ans;
    }
};
