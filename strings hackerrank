#include <iostream>
#include <string>
using namespace std;

int main() {
    string a;
    string b;
    cin>>a;
    cin>>b;
    int l1=a.size();
    int l2=b.size();
    cout<<l1<<" "<<l2<<endl;
    cout<<a+b<<endl;
    string x=a;
    a[0]=b[0];
    b[0]=x[0];
    cout<<a<<" "<<b;
  
    return 0;
}
