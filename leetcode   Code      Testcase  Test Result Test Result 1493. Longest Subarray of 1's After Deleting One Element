class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int start = 0;
        int end = 0;
        int ans = 0;
        unordered_map<int,int> hash;
        while(end < nums.size()){
            hash[nums[end]]++;
            if(hash.find(0)==hash.end() || hash[0]<=1){
                if(hash.find(0)==hash.end()){
                    ans = max(ans,hash[1]-1);
                }
                else{
                    ans = max(ans,hash[1]);
                }
                
            }
            else{
                hash[nums[start]]--;
                if(hash[nums[start]]==0){
                    hash.erase(nums[start]);
                }
                start++;
            }
            end++;
        }
        return ans;
    }
};
